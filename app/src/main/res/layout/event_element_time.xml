<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView style="@style/EventElementComponent"
            android:id="@+id/startDateElement"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry"
            android:paddingEnd="0dp"
            android:drawableStart="@drawable/ic_time_grey_24dp"
            android:textColor="@color/grey"
            />
        <TextView style="@style/EventElementComponent"
            android:id="@+id/startTimeElement"
            android:layout_weight="3"
            tools:ignore="RtlSymmetry"
            android:paddingStart="0dp"
            android:textColor="@color/grey"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView style="@style/EventElementComponent"
            android:id="@+id/endDateElement"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry"
            android:paddingStart= "34dp"
            android:textColor="@color/grey"
            /><!--24 (Drawable) + 10 (Drawable padding) -->
        <TextView style="@style/EventElementComponent"
            android:id="@+id/endTimeElement"
            tools:ignore="RtlSymmetry"
            android:paddingStart="0dp"
            android:layout_weight="3"
            android:textColor="@color/grey"
            />
    </LinearLayout>
</LinearLayout>

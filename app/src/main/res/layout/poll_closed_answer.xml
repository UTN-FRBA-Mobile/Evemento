<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_marginTop="3dp">
    <android.support.v7.widget.CardView
        android:id="@+id/answerBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/closedAnswerTextView"
        android:layout_alignTop="@id/closedAnswerTextView"
        android:layout_alignBottom="@id/closedAnswerTextView"
        android:elevation="0dp"
        app:cardCornerRadius="7dp">
        <ImageView
            android:src="@color/backgroundColor"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </android.support.v7.widget.CardView>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:elevation="20dp"
        android:id="@+id/closedAnswerTextView"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>
